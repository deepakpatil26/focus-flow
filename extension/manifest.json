{
    "manifest_version": 3,
    "name": "FocusFlow Website Blocker",
    "version": "1.0",
    "description": "Block distracting websites during Pomodoro sessions",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "http://localhost:5173/*",
                "http://localhost/*",
                "https://focus-flow-three-psi.vercel.app/*",
                "https://*.vercel.app/*",
                "https://*.netlify.app/*",
                "https://focusflow.app/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "site-blocker.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}